.swiper-tab{
  position: fixed;
  top: 70rpx;
  width: 100%;
  display: flex;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, .15);  
  background: #fff;
  z-index: 999;
  height: 60rpx;
  line-height: 60rpx;

}
.swiper-tab-list{
  flex: 1;
  text-align: center;
  font-size: 25rpx;
  color: #666;
  margin: 0 30rpx;
}
.on{
  border-bottom: 2px solid #53b042;
}
.personal-wrap{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}
.personal-wrap .personal-bg{
  margin-bottom: 80rpx;
  width: 100%;
}
swiper{
  height: 180rpx;
}
