.rightfix{
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 110rpx;
  height: 110rpx;
  background: #58ad45;
  color: #fff;
  text-align: center;
  border-radius: 100%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 0 3px #a1a1a1;
}
.right-text-wrap{
  position: fixed;
  right: 170rpx;
  bottom: 225rpx;
  overflow: visible;
  opacity: 0;
  animation: a_opacity 15s;
}
.right-text{
  background-color: #58ad45;
  color: #fff;
  padding: 10rpx 15rpx;
  border-radius: 6rpx;
  box-shadow: 0 0 3px #a1a1a1;
  position: relative;
  overflow: visible;
}
.right-text:after{
  content: '';
  display: block;
  position: absolute;
  right: -10px;
  top: 50%;
  margin-top: -5px;
  width: 0;
  height: 0;
  border: 5px solid #58ad45;
  border-color: transparent transparent transparent #58ad45;
}
@keyframes a_opacity
{
  10%,30%,50%,70%,90%{
    opacity: 1;
    transform: scale(1.1);
  }
  20%,40%,60%,80%,100%{
    opacity: 0.9;
    transform: scale(1);
  }
}