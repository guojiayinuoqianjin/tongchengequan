.border-1px-t::after,.border-1px-b::after{
  border-color: rgba(7, 17, 27, .15);
}
page{
  padding-top: 30rpx;
  padding:13rpx;
  width:96%;

}
.conwrap{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.cardpadding{
  padding: 0 25rpx;
}
.cardpadding .flexrow{
  padding: 14rpx 0;
  overflow: hidden;
}
.card-item-name{
  font-size: 32rpx;
  flex: 0 0 120rpx;
  width: 120rpx;
}
.fontred{
  color: red;
}
.cardmore{
  padding: 14rpx 25rpx;
  display: flex;
}
.card-textarea{
  padding-top: 8rpx;
}
textarea{
  padding: 6rpx 20rpx 10rpx 0; 
  min-height: 140rpx;
}
.alltop{
  align-items: flex-start;
}
.abletatal{
  text-align: right;
  padding-bottom: 20rpx;
}
.contentname,.contentnumber{
  flex: 1;
  height: 62rpx;
  line-height: 62rpx;
}
.contentname{
  font-size: 32rpx;
}
.contentnumber{
  text-align: right;
}
.picwrap{
  overflow: hidden;
  padding-bottom: 15rpx;
}
.add-pic{
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  padding: 34rpx;
  border: 1px solid #ddd;
  background: #fff;
  float:left;
  margin-right:10rpx;

}
.add-icon{
  width: 44rpx;
  height: 44rpx;
}
.create-wrap{
  padding: 0 25rpx;
}
.createdbtn{
  width: 100%;
}
.inputwidth{
  flex: 5;
}
.address-icon{
  flex: 1;
  text-align: right;
}
.add-pics{
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  float:left;
  margin-right:40rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;

}
.delete{
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: rgba(0, 0, 0, .3)
}
.delete .deicon{
  width: 24rpx;
  height: 24rpx;
}
.add-iconList{
  width: 120rpx;
  height: 120rpx;
}
.add-list{
  margin-top: 30rpx;
}