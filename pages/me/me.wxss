page{
  background: #f9f9f9;
}
.wrapper{
  background: #fff;
  padding: 40rpx 20rpx 40rpx 30rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}
.flexbox{
  align-items: center;
}
.me-block{
  background: #fff;
  padding-left: 30rpx;
  padding-right: 20rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-bottom: 10rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  flex: 0 0 120rpx;
}
.me-block .flexbox{
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.me-block .flexbox:last-child{
  border-bottom: 0;
}
.user-wrap{
  flex: 1;
  padding-left: 20rpx;
  color: #666;
}
.userinfo text{
  vertical-align: middle;
}
.name{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  margin-right: 3px;
}
.meicon .iconfont{
  margin-right: 10rpx;
}
.meicon text{
  display: inline-block;
  vertical-align: middle;
}
.daily{
  margin-top: 10rpx;
  color: #8a8a8a;
  font-size: 24rpx;
}
.fontred{
  color: #ff532a;
}
.kefu{
  width: 700rpx;
  font-size: 28rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
}
.threeclum{
  position: relative;
}
.righttext{
  position: absolute;
  right: 50rpx;
}
.bluefont{
  color: #5897f1;
}
.clum-item{
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  position: relative;
}
.clum-item-icon{
  display: block;
  width: 46rpx;
  height: 46rpx;
  margin: 0 auto 12rpx;
}
.tabs-num{
  position: absolute;
  right: 36rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: red;
  border-radius: 100%;
  text-align: center;
  font-size: 24rpx;
}
.me-list{
  font-size: 0;
  margin-left: -1px;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.me-item{
  width: 33.33333%;
  border-left: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  display: inline-block;
  vertical-align: top;
  
}
.me-item-wp{
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.me-item-icon{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}