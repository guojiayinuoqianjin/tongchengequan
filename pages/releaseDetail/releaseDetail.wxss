page{
  background: #f9f9f9;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.picList{
  overflow: hidden;
}
.textarea{
  padding: 15rpx;
  width: 99%;
  box-sizing: border-box;
  min-height: 300rpx;
  max-height: 400rpx;
  margin: 20rpx 0rpx;
  border:1px solid #E7E7E7;
  background:#fff;
}

.add-pic{
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  padding: 34rpx;
  border: 1px solid #ddd;
  background: #fff;
  float:left;
  margin-right:10rpx;

}
.add-pics{
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  float:left;
  margin-right:10rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;

}
.delete{
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: rgba(0, 0, 0, .3)
}
.delete .deicon{
  width: 24rpx;
  height: 24rpx;
}
.add-iconList{
  width: 160rpx;
  height: 160rpx;
}
.add-list{
  margin-top: 30rpx;
}
.add-icon{
  width: 84rpx;
  height: 84rpx;
}
.add-item{
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx 0;
  color: #666;
}
.minmargin{
  margin-right: 10rpx;
}
.help{
  color: #666;
}
.addbtn.disabled{
  color: #c6c6c6;
  background: #eaeaea;
}
.addbtn{
  width: 100%;
  color: #fff;
  margin: 40rpx 0 20rpx;
  background: #75c164;
}
button[disabled][type="default"], button[disabled]:not([type]){
  color: #c6c6c6;
  background: #eaeaea;
}